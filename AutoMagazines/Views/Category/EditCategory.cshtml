@model AutoMagazines.Data.Models.Category

<form class="p-a-1" asp-action="EditCategory" method="post" enctype="multipart/form-data">
    <input asp-for="CategoryId" class="form-control d-none" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">Название</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Desc">Описание</label>
            <input asp-for="Desc" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>