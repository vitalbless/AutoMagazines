@model AutoMagazines.Data.Models.Car

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Img" class="img-fluid rounded-start" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.LongDesc</p>
                <p class="card-text"><small class="text-body-secondary">@Model.Price.ToString("c")</small></p>
            </div>
        </div>
    </div>
</div>