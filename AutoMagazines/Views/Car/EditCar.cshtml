@model AutoMagazines.Data.ViewModels.AddCarViewModel

<form class="p-a-1" asp-action="EditCar" method="post" enctype="multipart/form-data">
<input class="form-control d-none" asp-for="@Model.Car.CarId" />

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Car.Name">Название</label>
            <input asp-for="@Model.Car.Name" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Car.ShortDesc">Краткое описание</label>
            <input asp-for="@Model.Car.ShortDesc" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label asp-for="@Model.Car.LongDesc">Полное описание</label>
            <textarea asp-for="@Model.Car.LongDesc" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="@Model.Car.Price">Цена</label>
            <input type="number" asp-for="@Model.Car.Price" class="form-control" />
        </div>
        <div class="form-group col-md-5">
            <label asp-for="@Model.Car.CategoryId">ID категории</label>
            <select asp-for="@Model.Car.CategoryId" class="form-select" aria-label="Default select example">
                <option selected>Выберите категорию</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.Name</option>
                }

            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label asp-for="@Model.Car.IsFavourite">
                <input asp-for="@Model.Car.IsFavourite" class="form-check-input" type="checkbox" />
                Добавить на главной странице
            </label>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="@Model.Car.Available">
                <input asp-for="@Model.Car.Available" class="form-check-input" type="checkbox" />
                Доступен для заказа
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Car.Img">Картинка</label>
        <input asp-for="@Model.Car.Img" type="file" name="uploadedFile" class="mb-4" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>