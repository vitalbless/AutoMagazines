@model AutoMagazines.Data.ViewModels.HomeIndexViewModel
<h2>@Model.PageName</h2>

<div class="row">
    <div class="col col-md-2">
        @await Component.InvokeAsync("NavigationMenu")
    </div>
    <div class="col col-md-10">
        <div page-model="@Model.PagingInfo" page-action="Index"
             page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-default"
             page-class-selected="btn-primary" class="btn-group pull-right">
        </div>
        <div class="row mt-5 mb-2">
            @{
                foreach (var car in Model.Cars)
                {
                    <div class="col-lg-4">
                        <img style="width: 350px" src="@car.Img" />
                        <h2>@car.Name</h2>
                        <p>@car.ShortDesc</p>
                        <p>Цена: @car.Price.ToString("c")</p>
                        <button class="btn btn-primary" href="#" onclick="location.href = '@Url.Action("SingleCar", "Car", new {carId=car.CarId})'">Подробнее</button>
                        <button class="btn btn-success" href="#" onclick="location.href = '@Url.Action("AddToCart", "ShopCart", new {id=car.CarId})'">В корзину</button>
                    </div>
                }
            }
        </div>
    </div>
</div>



